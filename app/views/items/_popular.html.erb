          <div class="card-body">
          <h5 class="card-title text-secondary"><%= link_to item.title, item %></h5>
          <h3 class="card-text"><%= number_to_currency(item.price, :unit => "â‚¬") %></h3>
        </div>
    </div>
  <% end %>
