<h2 class="col-md-9 offset-md-3">Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  
  
      <form>
      <div class="form-group row">
        <%= f.label :email, class: "col-2 col-form-label text-green" %>
        <div class="col-10">
          <%= f.email_field :email, autofocus: true, class: "form-control shadow rounded", placeholder: "Email" , class: "form-control" %>
        </div>
      </div>
        <div class="form-group row">
          <%= f.label :firstname, class: "col-2 col-form-label" %><br />
          <div class="col-10">
            <%= f.text_field :firstname, class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :surname, class: "col-2 col-form-label" %><br />
          <div class="col-10">
            <%= f.text_field :surname, autofocus: true, class: "form-control"  %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :address, class: "col-2 col-form-label" %><br />
          <div class="col-10">
            <%= f.text_field :address, autofocus: true, class: "form-control" %>
          </div>
        </div>
      
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
       
       <i>(leave blank if you don't want to change it)</i><br>
      <div class="form-group row">
        
        <%= f.label :password, class: "col-2 col-form-label text-green" %>
        <div class="col-10"> 
          <%= f.password_field :password, autocomplete: "off", class: "form-control shadow rounded", placeholder: " New password" %>
          <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :password_confirmation, class: "col-2 col-form-label text-green" %>
        <div class="col-10"> 
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control shadow rounded", placeholder: "Password confirmation" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :current_password, class: "col-2 col-form-label text-green" %>
        <div class="col-10"> 
          <%= f.password_field :current_password, autocomplete: "off", class: "form-control shadow rounded", placeholder: "Old password" %>
        </div>
      </div>
      
      <div class="row">
        <div class="col-8"><%= f.submit "Update", class: "btn btn-outline-success btn btn-primary btn-lg btn-block" %></div>
        <div class="col-4">Unhappy? <%= button_to "Cancel account", registration_path(resource_name), data: { confirm: "Are you sure?" }, class: "btn btn-danger", method: :delete %></div>
        
        <%= link_to 'Back to Products',  items_path, :class => "btn btn-info", :role => "button" %>
      </div>

          
        
        </div>
          
        
        </div>
      <% end %>
      
        
      </div>
      
    </form>

  

	<%= render 'items/footer' %> 
